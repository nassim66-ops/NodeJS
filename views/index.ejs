<!DOCTYPE html>
<html lang="en">
    <%- include("./utils/head.ejs") %>
<body>
    <%- include("./utils/nav.ejs") %>

    <div class="blogs content">
        <h2>All Blogs</h2>


        <% if(blogs.length > 0) {
            blogs.forEach(blog => {%>
                <a href="/blogs/<%= blog._id %>" class="single">
                    <h3 class="title"> <%= blog.title %></h3>
                    <p class="title"> <%= blog.snippet %></p>
                </a>
                <% })
        } else { %>
            <p>There is no blogs to display</p>
            <% } %>
    </div>
    <%- include("./utils/footer.ejs") %>
</body>
</html>